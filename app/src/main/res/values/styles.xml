<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigText" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/screenTitle</item>
        <item name="android:fontFamily">@font/sf_ui_display_semibold</item>
    </style>

    <style name="ScreenTitle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/screenTitle</item>
        <item name="android:fontFamily">@font/sf_ui_display_medium</item>
    </style>

    <style name="ArticleTitle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/articleTitle</item>
        <item name="android:fontFamily">@font/sf_ui_display_semibold</item>
    </style>

    <style name="ArticleSmallerTitle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/articleText</item>
        <item name="android:fontFamily">@font/sf_ui_display_semibold</item>
    </style>

    <style name="ArticleTextBig" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/articleTextBig</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
    </style>

    <style name="ArticleText" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/articleText</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#90FFFFFF</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="SplashScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="CustomSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
