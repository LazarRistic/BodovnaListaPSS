<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coupleImage"
            android:layout_width="0dp"
            android:layout_height="270dp"
            android:contentDescription="@string/couple_image_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#80000000"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/coupleImage">

            <TextView
                android:id="@+id/clubName"
                style="@style/BigText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="DARE 2 DANCE" />

            <TextView
                android:id="@+id/clubTown"
                style="@style/ArticleTextBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="Beograd" />

        </LinearLayout>

        <View
            android:id="@+id/clubImageTopHolder"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@id/coupleImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/clubImageHolder"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.916"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/clubImageTopHolder">

            <ImageView
                android:id="@+id/clubImage"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:contentDescription="@string/club_image_content_description"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/maleImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/male_image_content_description"
            android:src="@drawable/ic_man"
            app:layout_constraintBottom_toBottomOf="@+id/maleName"
            app:layout_constraintEnd_toStartOf="@+id/clubImageHolder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/maleName" />

        <TextView
            android:id="@+id/maleName"
            style="@style/ArticleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/clubImageHolder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/maleImage"
            app:layout_constraintTop_toBottomOf="@id/coupleImage"
            tools:text="Petar Vukobrat" />

        <TextView
            android:id="@+id/femaleName"
            style="@style/ArticleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/clubImageHolder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/maleImage"
            app:layout_constraintTop_toBottomOf="@id/maleName"
            tools:text="Kristina Gavrilov" />

        <ImageView
            android:id="@+id/femaleImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/female_image_content_description"
            android:src="@drawable/ic_woman"
            app:layout_constraintBottom_toBottomOf="@+id/femaleName"
            app:layout_constraintEnd_toStartOf="@+id/clubImageHolder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/femaleName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/femaleName">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/latinCategory"
                    style="@style/ArticleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/category_drawable"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/danceClassTitle"
                    app:layout_constraintStart_toStartOf="@+id/danceClassTitle"
                    app:layout_constraintTop_toBottomOf="@id/separator"
                    tools:backgroundTint="@color/color_class_a"
                    tools:text="A" />

                <TextView
                    style="@style/ArticleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/latin" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/standardCategory"
                    style="@style/ArticleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/category_drawable"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/danceClassTitle"
                    app:layout_constraintStart_toStartOf="@+id/danceClassTitle"
                    app:layout_constraintTop_toBottomOf="@id/separator"
                    tools:backgroundTint="@color/color_class_a"
                    tools:text="A" />

                <TextView
                    style="@style/ArticleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/standard" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ageCategory"
                    style="@style/ArticleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/category_drawable"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/danceClassTitle"
                    app:layout_constraintStart_toStartOf="@+id/danceClassTitle"
                    app:layout_constraintTop_toBottomOf="@id/separator"
                    tools:backgroundTint="@color/color_class_a"
                    tools:text="A" />

                <TextView
                    style="@style/ArticleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/category" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/followImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_follow" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
