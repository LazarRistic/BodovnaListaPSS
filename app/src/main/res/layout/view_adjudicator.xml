<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.overswayit.plesnisavezsrbije.viewmodels.AdjudicatorViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="26dp"
        android:paddingTop="10dp"
        android:paddingEnd="0dp">

        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/adjudicatorAvatarView"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/adjudicatorName"
            style="@style/ArticleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/adjudicatorAvatarView"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/adjudicatorAvatarView"
            android:gravity="center|start"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/adjudicatorLicenses"
            style="@style/ArticleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adjudicatorName"
            android:layout_alignStart="@id/adjudicatorName"
            android:paddingStart="0dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:textColor="#8C8C8C"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/adjudicatorLicenses"
            android:background="#C8C7CC" />

    </RelativeLayout>

</layout>