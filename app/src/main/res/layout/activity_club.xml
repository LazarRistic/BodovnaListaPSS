<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ClubActivity">

    <LinearLayout
        android:id="@+id/top_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_gradient_color"
        android:orientation="vertical"
        android:paddingBottom="44dp"
        android:paddingTop="?attr/actionBarSize">

        <View
            android:id="@+id/top_padding"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="#45FFFFFF" />

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                app:cardCornerRadius="2dp">

                <ImageView
                    android:id="@+id/club_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/club_logo" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:text="Best - Beograd"
            android:textColor="@color/white"
            android:textSize="@dimen/articleTitle" />

        <TextView
            android:id="@+id/club_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:alpha="0.6"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="Branislava Buba Radovanovic"
            android:textColor="@color/white"
            android:textSize="@dimen/articleText" />

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/top_holder"
        android:id="@+id/contact_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>