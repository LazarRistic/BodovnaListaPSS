<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/club_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/heading2"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/club_contact_email_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/club_contact_email_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/send_email"
            android:padding="16dp"
            android:src="@drawable/ic_email"
            android:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/club_contact_email"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/club_contact_email_button"
            android:gravity="start|center"
            android:paddingStart="76dp"
            android:paddingEnd="10dp"
            android:textIsSelectable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="56dp"
            android:background="#808080" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/club_contact_phone_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />

</LinearLayout>